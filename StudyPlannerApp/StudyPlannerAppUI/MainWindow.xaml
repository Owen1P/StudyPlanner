<Window x:Class="StudyPlannerAppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Study Planner" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Study Planner" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Add Study Session" Click="AddStudySession_Click" Margin="5"/>
            <Button Content="View Study History" Click="ViewStudyHistory_Click" Margin="5"/>
            <Button Content="Filter by Subject" Click="FilterBySubject_Click" Margin="5"/>
            <Button Content="Filter by Mood" Click="FilterByMood_Click" Margin="5"/>
            <Button Content="View Total Hours Per Subject" Click="ViewTotalHours_Click" Margin="5"/>
            <Button Content="View Mood Trends" Click="ViewMoodTrends_Click" Margin="5"/>
            <Button Content="Export Data" Click="ExportData_Click" Margin="5"/>
            <Button Content="Import Data" Click="ImportData_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
